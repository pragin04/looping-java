import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter a number: ");
        int number = sc.nextInt();

        int count = 0;
        if (number == 0) {
            count = 1;
        } else {
            while (number != 0) {
                count++;
                number = number / 10;
            }
        }

        System.out.println("Number of digits: " + count);
    }
}
